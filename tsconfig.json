{
  "compilerOptions": {
    "target": "ES2020",                          // Specify ECMAScript target version
    "module": "commonjs",                        // Specify module code generation
    "outDir": "./dist",                          // Redirect output structure to the dist folder
    "rootDir": "./src",                          // Specify the root directory of input files
    "strict": true,                              // Enable strict type-checking options
    "esModuleInterop": true,                     // Enable import of CommonJS modules
    "skipLibCheck": true,                        // Skip checking types of all declaration files
    "forceConsistentCasingInFileNames": true     // Ensure consistent casing in imports
  },
  "include": ["src"],                            // Include source code
  "exclude": ["node_modules", "dist"]            // Exclude unnecessary files
}